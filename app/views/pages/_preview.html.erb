<%= content_tag(:div, @content.subject, 
      {:id => 'title', :class => 'mdwiki_title'}) %>
<% if @content.id != Content::PREVIEW_ID %>
  <%= content_tag(:div, nil, {:class => 'mdwiki_date'}) do %>
    <%= content_tag(:span, 'Created by') %>
    <%= content_tag(:span, @content.created_user) %>
    <%= content_tag(:span, @content.created_at) %>
    <%= content_tag(:span, '/') %>
    <%= content_tag(:span, 'Updated by') %>
    <%= content_tag(:span, @content.updated_user) %>
    <%= content_tag(:span, @content.updated_at) %>
  <% end %>
<% end %>
<%= content_tag(:div, @content.md_to_html.html_safe, 
      {:id => 'content', :class => 'mdwiki_content'}) %>
