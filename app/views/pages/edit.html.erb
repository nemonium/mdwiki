<%= content_tag(:div, nil) do %>
  <%= render(:partial => "header", :object  => @f_permit) %>
<% end %>

<%= content_tag(:div, nil, {:class => 'mdwiki_breadcrumb'}) do %>
  <%= render(:partial => 'breadcrumb', :locals => {
    :breadcrumb_list => @content.breadcrumb_list}) %>
<% end %>

<%= content_tag(:div, nil, {:class => 'mdwiki_edit'}) do %>
  <%= hidden_field_tag('content_id', @content.id) %>
  <%= hidden_field_tag('parent_id', @content.parent_id) %>
  <%= content_tag(:div, text_field_tag('subject', @content.subject)) %>
  <%= content_tag(:div, text_area_tag('content', @content.content)) %>
<% end %>

<%= content_tag(:div, nil, {
  :id => 'attachment_content', 
  :class => 'mdwiki_attachment'}) do %>
  <%= if @f_permit.save_cmd == 'insert' then
        render(:partial => "noattachment")
      else
        render(:partial => "attachment", :locals => {
          :id => @content.id,
          :attachments => @attachments})
      end %>
<% end %>

<%= content_tag(:div, nil, {
  :id => 'preview_content',
  :class => 'mdwiki_preview'}) %>

<%= content_tag(:span, @alert, {
  :id => 'alert_message', 
  :class => 'alert_message'}) %>
