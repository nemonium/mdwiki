<%= devise_error_messages! %>

<%= content_tag(:div, nil, :class => 'mdwiki_login') do %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="devise_items">Email</div>
  <div class="devise_input"><%= f.email_field :email, autofocus: true, placeholder: 'Email' %></div>

  <div class="devise_items">Password</div>
  <div class="devise_input"><%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %></div>

  <div class="devise_items">Password confirmation</div>
  <div class="devise_input"><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password confirmation' %></div>

  <div class="devise_items">Administrator</div>
  <div class="devise_input">
    <span class="mdwiki_checkbox">
      <%= check_box_tag 'admin_flg', true, false, {} %>
      <label for="admin_flg" title="Administrator"></label>
    </span>
  </div>

  <%= content_tag(:div, '&nbsp;'.html_safe) %>
  <div>
    <span class="mdwiki_menu_btn">
      <a href="#" onclick="$('#new_user').submit();" class="mdwiki_menu_link">Sign up</a>
    </span>
  </div>
<% end %>
<% end %>
