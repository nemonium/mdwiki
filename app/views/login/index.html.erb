<%= content_tag(:div, nil, :class => 'mdwiki_login') do %>
  <span class="mdwiki_logo">mdwiki</span>
  <%= content_tag(:div, text_field_tag('username')) %>
  <%= content_tag(:div, password_field_tag('password')) %>
  <%= content_tag(:div, '&nbsp;'.html_safe) %>
  <div>
    <span class="mdwiki_menu_item">
      <a href="#" onclick="return login();" 
        class="mdwiki_menu_link">Login</a>
    </span>
  </div>
<% end %>

<%= content_tag(:span, @alert, {
  :id => 'alert_message', 
  :class => 'alert_message'}) %>
