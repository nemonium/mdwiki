<%= content_tag(:div, nil, :class => 'mdwiki_attachment_drop') do %>
  <%= form_tag(nil, :multipart => true, :id => 'mdwiki_attachment_form') do %>
    <%= file_field_tag('attachment',{
      :class => 'attachment', 
      :accept => 'image/*',
      :onchange => 'return upload_attachment();'}) %>
    <%= hidden_field_tag('id', id) %>
    <%= content_tag(:span, 'Drop Attachment', :class => 'mdwiki_attachment_lbl') %>
  <% end %>
<% end %>

<%= content_tag(:div, nil, {:class => 'mdwiki_attach_list'}) do %>
  <% attachments.each do |atch| %>
    <%= content_tag(:div, nil, {:class => 'mdwiki_attach_box'}) do %>
      <img alt="<%= atch.filename %>" height="150" width="150" src=<%= "/mdwiki/attachment/#{atch.attachment_id}" %>>
      <span class="mdwiki_menu_btn">
        <a href="#" onclick="return remove_attachment('<%= id %>', '<%= atch.attachment_id %>');" 
          class="mdwiki_menu_link">x</a>
      </span>
    <% end %>
  <% end %>
<% end %>
